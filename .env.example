# ==========================================
# RunCloud Automator Configuration
# ==========================================

# RunCloud API V3 Bearer Token (Settings > API Keys)
RC_API_KEY=your_token_here

# Target Server ID (Found in URL: /servers/12345/...)
RC_SERVER_ID=

# --- Optional Defaults (Overridden by CLI flags) ---

# System User ID to own files (Default: RunCloud User)
RC_DEFAULT_USER=

# Default WordPress Admin Email
RC_ADMIN_EMAIL=

# Default WordPress Username
RC_ADMIN_USER=

# Default WordPress Password (If empty, auto-generated)
RC_ADMIN_PASSWORD=

# --- Feature Flags ---

# Install RunCloud Hub Plugin? (true/false)
RC_INSTALL_HUB=false

# Provision SSL via Let's Encrypt? (true/false)
# WARNING: DNS must point to server IP before running if true.
RC_INSTALL_SSL=false

# --- Hub Settings ---

# Cache Type: "native" or "redis"
RC_HUB_TYPE=native

# Enable Redis Object Cache? (true/false) - Only applies if type=redis
RC_HUB_REDIS_OBJ=false

# Remove PHP Restrictions (exec, shell_exec)? (true/false)
# WARNING: Setting this to true removes security restrictions.
RC_UNRESTRICTED_PHP=false

